{
  "$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noExplicitAny": "warn",
        "noArrayIndexKey": "warn",
        "noConsoleLog": "warn",
        "noDoubleEquals": "error",
        "noGlobalIsNan": "error",
        "noRedeclare": "error"
      },
      "a11y": {
        "useAltText": "error",
        "useKeyWithClickEvents": "error",
        "useValidAnchor": "error"
      },
      "correctness": {
        "useExhaustiveDependencies": "error",
        "noUnreachable": "error",
        "noUndeclaredVariables": "error",
        "noUnusedLabels": "error",
        "noConstantCondition": "error"
      },
      "nursery": {
        "noUnusedImports": "error",
        "noUnusedVariables": "error"
      },
      "complexity": {
        "noForEach": "warn",
        "noBannedTypes": "error",
        "noStaticOnlyClass": "error",
        "noUselessCatch": "error",
        "noUselessConstructor": "error"
      },
      "style": {
        "noNonNullAssertion": "warn",
        "useShorthandArrayType": "error",
        "useTemplate": "error",
        "useConsistentArrayType": "error",
        "useConst": "error",
        "noParameterAssign": "error",
        "noDefaultExport": "warn"
      },
      "performance": {
        "noDelete": "error"
      },
      "security": {
        "noDangerouslySetInnerHtml": "error",
        "noDangerouslySetInnerHtmlWithChildren": "error"
      },
      "react": {
        "noAccessStateInSetState": "error",
        "noArrayIndexKey": "warn",
        "noChildrenProp": "error",
        "noChildrenCount": "error",
        "noChildrenForComponent": "error",
        "noConstructor": "error",
        "noDangerWithChildren": "error",
        "noDidUpdateSetState": "error",
        "noDuplicateKey": "error",
        "noRenderReturnValue": "error",
        "noStringRefs": "error",
        "noUnsafeLifecycle": "error",
        "noVoidElementsWithChildren": "error",
        "useButtonType": "error",
        "useJsxKey": "error"
      }
    },
    "ignore": [
      "node_modules",
      ".next",
      "dist",
      "public"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100,
    "ignore": [
      "node_modules",
      ".next",
      "dist",
      "public"
    ]
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "trailingComma": "es5",
      "semicolons": "always"
    }
  },
  "files": {
    "include": ["**/*.js", "**/*.jsx", "**/*.ts", "**/*.tsx"],
    "ignore": [
      "node_modules",
      ".next",
      "dist",
      "build",
      "public",
      "**/*.config.js",
      "next-env.d.ts"
    ]
  }
}

